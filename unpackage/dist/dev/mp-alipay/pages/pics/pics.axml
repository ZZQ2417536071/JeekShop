<view class="pics"><scroll-view class="left" scroll-y><block a:for="{{cates}}" a:for-item="item" a:for-index="index" a:key="title"><view data-event-opts="{{[['tap',[['leftClickHandle',[index,'$0'],[[['cates','title',item.title]]]]]]]}}" class="{{((active==index)?'active':'')}}" onTap="__e">{{''+item.title+''}}</view></block></scroll-view><scroll-view class="right" scroll-y><block a:for="{{secondData}}" a:for-item="item" a:for-index="__i0__" a:key="id"><view class="item"><image src="{{item.img_url}}" data-event-opts="{{[['tap',[['previewImg',['$0'],[[['secondData','id',item.id,'img_url']]]]]]]}}" onTap="__e"></image><text>{{item.title}}</text></view></block><block a:if="{{secondData.length===0}}"><text>暂无数据</text></block></scroll-view></view>